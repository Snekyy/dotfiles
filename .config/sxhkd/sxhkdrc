#
# applications/scripts
#

# terminal emulator
shift + alt + t
	alacritty

# program launcher
shift + @space
	rofi -show drun

# files manager
shift + alt + e
	alacritty -e ranger 

# change keyboard layout
alt + space
    /bin/bash /home/snekyy/.config/sxhkd/scripts/chg_layout.sh

# lock screen
super + l
    /bin/bash /home/snekyy/.config/sxhkd/scripts/lock.sh

#
# sxhkd binds
#

# reload sxhkd configuration
super + Escape
	pkill -USR1 -x sxhkd

#
# function keys
#

# F1
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%

# F2
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%

# F3
XF86AudioMute
	pactl set-sink-volume 0 0%

# F4
XF86MonBrightnessUp
	brightnessctl set +5%

# F5
XF86MonBrightnessDown
	brightnessctl set 5%-

# F11 (Print button)
super + p
	flameshot gui

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# kill window
ctrl + shift + w
	bspc node -c

#
# state/flags
#

# Fullscreen mode
super + f
	bspc node -t fullscreen

# Floating mode
super + s
	bspc node -t floating

# Tiling mode
super + t
	bspc node -t tiled

# Pseudo-tiling mode
#super + shift + t
#	bspc node -t pseudo_tiled

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus windows
ctrl + {h,j,k,l}
	bspc node -f {west,south,north,east}	

# hide all windows(show desktop)
super + d
    /bin/bash /home/snekyy/.config/sxhkd/scripts/toggle_hide_windows.sh

# focus/swap
#

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i} bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
