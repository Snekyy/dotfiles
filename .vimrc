" syntax highlight
syntax on
filetype on
filetype indent on
filetype indent plugin on

" lines enumeration
set number

" encoding
set encoding=utf-8

" Move to next string if cursor in the end of current
set whichwrap=b,s,<,>,[,]

" No empty lines in the end of file
set guiheadroom=0

" normal paste
set tabstop=5
set shiftwidth=4
set noexpandtab

" Fixes mouse issues using Alacritty terminal emulator
set ttymouse=sgr
